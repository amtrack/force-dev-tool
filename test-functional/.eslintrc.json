{
  "extends": "eslint:recommended",
  "globals": {
    "Given": true,
    "When": true,
    "Then": true
  },
  "env": {
    "es6": true,
    "node": true
  },
  "rules": {
    "semi": [
      2,
      "always"
    ],
    "no-bitwise": 2,
    "no-cond-assign": 0,
    "no-console": 0,
    "curly": [
      2,
      "all"
    ],
    "no-debugger": 0,
    "eqeqeq": 2,
    "no-eq-null": 2,
    "no-eval": 0,
    "no-unused-expressions": 1,
    "guard-for-in": 2,
    "no-extend-native": 2,
    "block-scoped-var": 0,
    "strict": 0,
    "no-iterator": 0,
    "no-use-before-define": 2,
    "no-loop-func": 2,
    "complexity": [
      2,
      11
    ],
    "max-depth": [
      2,
      5
    ],
    "max-params": [
      2,
      10
    ],
    "max-statements": [
      2,
      40
    ],
    "no-caller": 2,
    "no-irregular-whitespace": 2,
    "no-new": 2,
    "valid-typeof": 0,
    "require-yield": 0,
    "no-plusplus": 0,
    "no-proto": 0,
    "no-script-url": 0,
    "no-shadow": 2,
    "no-new-func": 0,
    "no-new-wrappers": 0,
    "no-undef": 2,
    "no-unused-vars": 0,
    "no-invalid-this": 0,
    "space-before-function-paren": [
      2,
      "never"
    ],
    "no-empty": 2,
    "no-spaced-func": 2,
    "array-bracket-spacing": [
      2,
      "never",
      {
        "singleValue": true
      }
    ],
    "space-in-parens": [
      2,
      "never"
    ],
    "key-spacing": [
      2,
      {
        "beforeColon": false,
        "afterColon": true
      }
    ],
    "space-unary-ops": [
      2,
      {
        "words": false,
        "nonwords": false
      }
    ],
    "no-mixed-spaces-and-tabs": 2,
    "no-trailing-spaces": 2,
    "yoda": [
      2,
      "never"
    ],
    "no-with": 2,
    "brace-style": 2,
    "no-multiple-empty-lines": 2,
    "no-multi-str": 2,
    "one-var": [
      2,
      "never"
    ],
    "comma-spacing": [
      2,
      {
        "before": false,
        "after": true
      }
    ],
    "semi-spacing": [
      2,
      {
        "before": false,
        "after": true
      }
    ],
    "space-before-blocks": [
      2,
      "always"
    ],
    "wrap-iife": 2,
    "comma-style": [
      2,
      "last"
    ],
    "space-infix-ops": 2,
    "camelcase": [
      2,
      {
        "properties": "never"
      }
    ],
    "new-cap": [
      2,
      {
        "capIsNewExceptions": [
          "BbvaPagejsRouting",
          "Cells",
          "CellsApp",
          "I18nMsg",
          "Platform",
          "Polymer",
          "Promise",
          "WCT"
        ]
      }
    ],
    "dot-notation": 2,
    "keyword-spacing": [
      2,
      {
        "overrides": {
          "if": {
            "after": true
          },
          "else": {
            "after": true
          },
          "for": {
            "after": true
          },
          "while": {
            "after": true
          },
          "do": {
            "after": true
          },
          "switch": {
            "after": true
          },
          "case": {
            "after": true
          },
          "return": {
            "after": true
          },
          "try": {
            "after": true
          },
          "catch": {
            "after": true
          },
          "typeof": {
            "after": true
          }
        }
      }
    ],
    "lines-around-comment": [
      2,
      {
        "beforeBlockComment": false,
        "beforeLineComment": true,
        "allowBlockStart": true
      }
    ],
    "consistent-this": [
      2,
      "_this"
    ],
    "quotes": [
      2,
      "single"
    ],
    "indent": [
      2,
      2,
      {
        "SwitchCase": 1
      }
    ]
  }
}
