{
  "name": "force-dev-tool",
  "description": "Command line tool supporting the Force.com development and deployment workflow",
  "version": "0.6.0",
  "author": "Matthias Rolke <mr.amtrack@gmail.com>",
  "bin": {
    "force-dev-tool": "bin/cli"
  },
  "dependencies": {
    "archiver": "^1.0.0",
    "async": "^2.0.0",
    "chalk": "^1.1.3",
    "docopt": "^0.6.2",
    "find-up": "^1.1.2",
    "fs-extra": "^0.30.0",
    "jsforce": "^1.7.0",
    "mkdirp": "^0.5.1",
    "multimatch": "^2.1.0",
    "parse-diff": "^0.3.2",
    "tabtab": "0.0.4",
    "tmp": "0.0.28",
    "underscore": "^1.8.3",
    "vinyl": "^1.1.1",
    "vinyl-fs": "^2.4.3",
    "xmldoc": "github:nyurik/xmldoc#3107ca5fe10227539299fb1bb82992d5b824bc37",
    "yauzl": "^2.3.1"
  },
  "devDependencies": {
    "eslint": "^2.13.1",
    "istanbul": "^0.4.4",
    "js-beautify": "^1.6.2",
    "jsdoc": "^3.3.2",
    "mocha": "^2.3.2",
    "sinon": "^1.17.4"
  },
  "engines": {
    "node": ">= 0.12.0"
  },
  "keywords": [
    "cli",
    "deployment",
    "diff",
    "force.com",
    "forcedotcom",
    "metadata",
    "salesforce",
    "sfdc"
  ],
  "license": "MIT",
  "main": "lib/index.js",
  "preferGlobal": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/amtrack/force-dev-tool.git"
  },
  "scripts": {
    "doc": "jsdoc lib -r -R README.md -d doc",
    "istanbul": "istanbul test ./node_modules/.bin/_mocha -- test/ --recursive",
    "lint": "eslint --ignore-path .gitignore .",
    "mocha": "mocha test/ --recursive",
    "test": "npm run lint && npm run istanbul",
    "fmt": "find lib test -name '*.js' | xargs --no-run-if-empty js-beautify -r"
  }
}
